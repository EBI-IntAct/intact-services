<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- Needed by Spring to find the annotations in the code -->
    <context:component-scan base-package="uk.ac.ebi.intact.dataexchange.imex.idassigner"/>

    <!-- IntAct -->
    <bean id="intactConfig" class="uk.ac.ebi.intact.core.config.IntactConfiguration">
        <property name="acPrefix" value="EBI"/>
        <property name="defaultInstitution" ref="institutionIntact"/>
        <property name="skipSchemaCheck" value="true"/>
    </bean>

    <bean id="userContext" class="uk.ac.ebi.intact.core.context.UserContext">
        <property name="userId" value="IMEX_ASSIGNER"/>
    </bean>

    <!-- Imex central manager -->
    <bean id="imexCentralManager" class="uk.ac.ebi.intact.dataexchange.imex.idassigner.ImexCentralManager">
        <property name="publicationUpdater" ref="intactPublicationUpdater"/>
        <property name="publicationRegister" ref="intactPublicationRegister"/>
        <property name="publicationImexAssigner" ref="intactPublicationAssigner"/>
        <property name="imexCentralRegister" ref="imexCentralRegister"/>
        <property name="imexStatusSynchronizer" ref="intactImexStatusSynchronizer"/>
        <property name="intactImexAssigner" ref="intactImexAssigner"/>

        <!--<property name="imexAdminGroupSynchronizer" ref="imexAdminGroupSynchronizer"/>-->
        <!--<property name="imexAdminUserSynchronizer" ref="imexAdminUserSynchronizer"/>-->

        <!--<property name="publicationIdentifierSynchronizer" ref="publicationIdentifierSynchronizer"/>-->

        <!--<property name="updatePublicationAdminGroup" value="true"/>-->
        <!--<property name="updatePublicationAdminUser" value="true"/>-->
        <!--<property name="updatePublicationStatus" value="true"/>-->
    </bean>

</beans>